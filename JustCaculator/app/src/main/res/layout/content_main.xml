<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="com.justcaculator.juphoon.justcaculator.MainActivity">

    <?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/myLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_chicangfene"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="持仓份额"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_chicangfene"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:ems="7"
                android:inputType="numberDecimal"
                android:text="0" />

            <TextView
                android:id="@+id/tv_chicangjingzhi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="持仓净值"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_chicangjingzhi"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="7"
                android:inputType="numberDecimal"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="0.01"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_chicangzonge"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="持仓总额"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_chicangzonge"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="0" />

            <Button
                android:id="@+id/bt_pingcang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="平仓" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_jiacangzonge"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="加仓总额"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_jiacangzonge"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:ems="7"
                android:inputType="numberDecimal"
                android:text="0" />

            <TextView
                android:id="@+id/_jiacangjingzhi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="加仓净值"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_jiacangjingzhi"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="7"
                android:inputType="numberDecimal"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_jiacangfene"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="加仓份额"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_jiacangfene"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:ems="7"
                android:inputType="numberDecimal"
                android:text="0" />

            <Button
                android:id="@+id/bt_jiacang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="加仓" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_cangfene"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="减仓份额"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_cangfene"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:ems="7"
                android:inputType="numberDecimal"
                android:text="0" />

            <TextView
                android:id="@+id/tv_jianicangjingzhi"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="减仓净值"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_jiancangjingzhi"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="7"
                android:inputType="numberDecimal"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_jiancangzonge"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="减仓总额"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_jiancangzonge"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="0" />

            <Button
                android:id="@+id/bt_jiancang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="减仓" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_chicangchengben"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="持仓成本"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_chicangchengben"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="0" />

            <TextView
                android:id="@+id/tv_chicangyingkui"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="持仓盈亏"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_chicangyingkui"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="0" />

            <TextView
                android:id="@+id/tv_1p"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="%"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_jiacangchengben"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="加仓成本"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_jiacangchengben"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="0" />

            <TextView
                android:id="@+id/tv_jiacangyingkui"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="加仓盈亏"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_jiacangyingkui"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="0" />

            <TextView
                android:id="@+id/tv_2p"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="%"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tv_jiancangchengben"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="减仓成本"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_jiancangchengben"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="0" />

            <TextView
                android:id="@+id/tv_jiancangyingkui"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="减仓盈亏"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_jiancangyingkui"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="0" />

            <TextView
                android:id="@+id/tv_3p"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="%"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0.15"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/bt_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="保存" />

            <Button
                android:id="@+id/bt_get"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="获取" />
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
